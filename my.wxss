.UCenter-bg {
  background-image: url(https://pic.baike.soso.com/ugc/baikepic2/0/20221115113034-1069139043_jpeg_589_589_30351.jpg/0);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}

/* 用户信息样式 */
.avatar-wrapper {
  padding: 0;
  margin: 0;
  border: none;
  background: transparent;
  border-radius: 50%;
  overflow: hidden;
  width: 100rpx;
  height: 100rpx;
}

.avatar-wrapper::after {
  border: none;
}

.avatar-wrapper .cu-avatar {
  width: 100% !important;
  height: 100% !important;
  border-radius: 50%;
  border: none;
  transition: all 0.3s ease;
  object-fit: cover;
}

.avatar-wrapper:active .cu-avatar {
  transform: scale(0.95);
}
